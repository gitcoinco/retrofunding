{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "e2e": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "wallet-cache": {
      "dependsOn": ["^wallet-cache"]
    },
    "wallet-cache:headless": {
      "dependsOn": ["^wallet-cache:headless"]
    },
    "playwright:browser": {
      "dependsOn": ["^playwright:browser"]
    }
  }
}
